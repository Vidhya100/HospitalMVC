<style>
/* css fpr page header*/
        .mainheader{
            height:50px;
            width:100%;
            display: flex;
            flex-direction: row;
            border: 1px solid black;
            border: transparent;
            padding-top: 7px;
            margin-bottom: 15px;
            
        }
        .logo-name{
            /*display:flex;
            flex-direction: row;*/
            margin-left: 7%;
            /*border: 1px solid black;*/
            margin-right:80px;
        }
        .e{
            color:purple;
            font-size:170%;
            font-style:italic;
            top:20px;
            left:48%;
            position:relative;
            z-index:1;
        }
        .middle{
            padding-left:20px;
            display:flex;
            flex-direction: row;
            gap: 20px;
            margin-right:50px;
        }
        .end{
            /*border: 1px solid black;*/
            margin-left:45%;
            display:flex;
            flex-direction: row;
            gap: 20px;
           /* float: right;*/
        }
        .logo{
            height:50px;
            width:104px;
            position:absolute;
        }
        .clinic{
            color:purple;
            font-size:170%;
            font-style:italic;
            top:20px;
            left:77%;
            position:relative;
        }
        .service{
            margin-top: 28px;
        }
        .about{
            margin-top: 10px
        }
        .service, .about{
            padding-top: 8px;
            padding-bottom: 8px;
            padding-right: 8px;
            padding-left: 8px;
           /* margin-top: 18px;*/
            color: black;
            border: transparent;
            background: none;
            font-size: 15px;

        }
        .login{
            background-color: white;
            color: blue;
        }
        .signin{
            background-color: blue;
            color: white;
        }
        .login, .signin{
            padding:5px 8px 10px 8px;
            
           /* background-color: white;*/
            border:1px solid transparent;
            border-radius:5px;
            width: 90px;
            height: 40px;
            font-size: 20px;
            margin-top:15px;
        }
        .username{
            margin-top:32px;
        }
        .profileImg
        {
            margin-top:22px;
            height:45px;
            width:45px;
            position:absolute;
        }
        /*.logout-btn{
               margin-top: 20px;
               padding: 7px;
               border-radius: 15px;
               border: transparent;
        }*/
        #logout-form {
            position: relative;
            bottom: -56px;
            left: 0;
            right: 0;
            margin: auto;
         }
</style>

<div class="mainheader">
       
        <div class="logo-name" asp-area="" asp-controller="User" asp-action="Index">
            <a class="e" asp-area="" asp-controller="User" asp-action="Index" >e</a>
            <img class="logo" src="~/assets/icons/MedIcon.png" />
            <a class="clinic" asp-area="" asp-controller="User" asp-action="Index">Clinic</a>
        </div>

        <div class="middle">
            <div class="Services">
               <a asp-controller="User" asp-action="Services">
                    <button class="service">Services</button>
                </a>
            </div>
            <div class="about">
                <a asp-controller="User" asp-action="AllAbout">
                    <button class="about">All About</button>
                </a>
            </div>
        </div>

        <div class="end">
               
                @if(Context.Session.GetString("Username") != null)
                    {
                        <span class="username">Welcome, @Context.Session.GetString("Username")!</span>
                        <a href="#" class="profile-icon">
                                <img  class="profileImg" width="42" height="42" src="~/assets/icons/profile-icon.jpg" alt="Profile icon" />
                        <!-- Add logout form -->
                            <div id="logout-form" style="display:none;">
                                 <form method="post" asp-action="Logout" asp-controller="User">
                                   <button type="submit" class="logout-btn ">Logout</button>
                                </form>
                            </div>
                        </a>
                    }
                    else
                    {
                        <a asp-controller="User" asp-action="Login">
                            <button class="login ">Log In</button>
                        </a>
           
                        <a asp-controller="User" asp-action="RegisterAP">
                            <button  class="signin ">Sign Up</button>
                        </a>
                    }
        
        </div>
  </div>

   <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    
